<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="users">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.birthday %></td>
        <td><%= user.sex %></td>
        <td><%= user.email %></td>
        <td class="link"><%= link_to 'Show', user %></td>
<!--         <td><%= link_to 'Edit', edit_user_path(user) %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
